# Database Configuration
DB_HOST=localhost
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=naricare_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_make_it_very_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_also_change_this
JWT_REFRESH_EXPIRES_IN=7d

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@naricare.app
SENDGRID_FROM_NAME=NariCare Support

# 2FA Configuration
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=3
OTP_LENGTH=6

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here

# App Configuration
APP_NAME=NariCare
APP_URL=https://naricare.app
FRONTEND_URL=http://localhost:8100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_for_additional_security

# File Upload (if needed)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log